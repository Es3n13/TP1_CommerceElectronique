<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - ÉléganceShop</title>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />

    <!-- Icônes Bootstrap -->
    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" />

    <!-- Styles -->
    <link rel="stylesheet" href="~/css/style.css" />
</head>
<body>
    <header class="site-header">
        <div class="container">
            <!-- NAVBAR -->
            <nav class="navbar navbar-expand-lg navbar-dark bg-dark-blue shadow-sm w-100">
                <div class="container-fluid">
                    <a class="navbar-brand fw-bold" asp-controller="Home" asp-action="Index">
                        Élégance<span class="text-gold">Shop</span>
                    </a>

                    <button class="navbar-toggler" type="button"
                            data-bs-toggle="collapse"
                            data-bs-target="#mainNavbar"
                            aria-controls="mainNavbar"
                            aria-expanded="false"
                            aria-label="Menu">
                        <span class="navbar-toggler-icon"></span>
                    </button>

                    <div class="collapse navbar-collapse" id="mainNavbar">
                        <ul class="navbar-nav ms-auto mb-2 mb-lg-0">

                            @* Bonjour, Nom *@
                            @if (User.Identity?.IsAuthenticated ?? false)
                            {
                                <li class="nav-item d-flex align-items-center nav-hello">
                                    <span class="navbar-text me-3 nav-link-inline nav-hello-text">
                                        <i class="bi bi-person-circle me-1"></i>
                                        <span>Bonjour, @User.Identity.Name</span>
                                    </span>
                                </li>
                            }

                            @* Accueil: toujours visible *@
                            <li class="nav-item">
                                <a class="nav-link nav-link-inline" asp-controller="Home" asp-action="Index">
                                    <i class="bi bi-house-door me-1"></i>
                                    <span>Accueil</span>
                                </a>
                            </li>

                            @* Vendeur UNIQUEMENT *@
                            @if (User.IsInRole("Vendeur"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link nav-link-inline" asp-controller="Sales" asp-action="Index">
                                        <i class="bi bi-receipt-cutoff me-1"></i>
                                        <span>Commandes</span>
                                    </a>
                                </li>
                            }

                            @* Client UNIQUEMENT *@
                            @if (User.IsInRole("Client"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link nav-link-inline" asp-controller="Cart" asp-action="Index">
                                        <i class="bi bi-cart me-1"></i>
                                        <span>Panier</span>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link nav-link-inline" asp-controller="Orders" asp-action="Index">
                                        <i class="bi bi-bag-check me-1"></i>
                                        <span>Mes commandes</span>
                                    </a>
                                </li>
                            }

                            @* Liens visibles pour tout utilisateur authentifié (peu importe le rôle) *@
                            @if (User.Identity?.IsAuthenticated ?? false)
                            {
                                <a asp-controller="Account" asp-action="Profile" class="nav-link">Profil</a>
                                <form method="post" asp-controller="Account" asp-action="Logout" style="display: inline;">
                                    <button type="submit" class="btn btn-link nav-link">Déconnexion</button>
                                </form>
                            }
                            else
                            {
                                <a asp-controller="Account" asp-action="Login" class="nav-link">Connexion</a>
                                <a asp-controller="Account" asp-action="Register" class="nav-link">Inscription</a>
                            }

                        </ul>


                        <div class="navbar-social ms-lg-3 mt-3 mt-lg-0">
                            <a href="#" class="nav-social-icon">
                                <i class="bi bi-facebook"></i>
                            </a>
                            <a href="#" class="nav-social-icon">
                                <i class="bi bi-instagram"></i>
                            </a>
                            <a href="#" class="nav-social-icon">
                                <i class="bi bi-twitter-x"></i>
                            </a>
                        </div>
                    </div>
                </div>
            </nav>
        </div>
    </header>

    <main role="main">
        <section class="hero">
            <div class="container">
                <h1>Le raffinement à portée de main</h1>
                <p>Restaurants élégants • Qualité premium • Préparation rapide</p>
                <a class="btn btn-primary hero-button" asp-controller="Home" asp-action="Index">
                    Voir les restaurants
                </a>
            </div>
        </section>

        <div class="container py-4">
            @RenderBody()
        </div>
    </main>

    <footer class="site-footer">
        <div class="container">
            <p>&copy; @DateTime.Now.Year - ElegenceShop. Tous droits réservés.</p>
        </div>
    </footer>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
