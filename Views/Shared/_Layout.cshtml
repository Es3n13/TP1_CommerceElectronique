<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - ÉléganceShop</title>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />

    <!-- Icônes Bootstrap -->
    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" />

    <!-- Styles -->
    <link rel="stylesheet" href="~/css/style.css" />
</head>
<body>
    <header class="site-header">
        <div class="container">
            <!-- NAVBAR -->
            <nav class="navbar navbar-expand-lg navbar-dark bg-dark-blue shadow-sm w-100">
                <div class="container-fluid">
                    <a class="navbar-brand fw-bold d-flex align-items-center"
                       asp-controller="Home" asp-action="Index">
                        Élégance<span class="text-gold">Shop</span>
                    </a>

                    <button class="navbar-toggler" type="button"
                            data-bs-toggle="collapse"
                            data-bs-target="#mainNavbar"
                            aria-controls="mainNavbar"
                            aria-expanded="false"
                            aria-label="Menu">
                        <span class="navbar-toggler-icon"></span>
                    </button>

                    <div class="collapse navbar-collapse" id="mainNavbar">
                        <ul class="navbar-nav ms-auto mb-2 mb-lg-0">

                            @* Bonjour, Nom *@
                            @if (User.Identity?.IsAuthenticated ?? false)
                            {
                                <li class="nav-item d-flex align-items-center nav-hello">
                                    <span class="navbar-text me-3 nav-link-inline nav-hello-text">
                                        <i class="bi bi-person-circle me-1"></i>
                                        <span>Bonjour, @User.Identity.Name</span>
                                    </span>
                                </li>
                            }

                            @* Accueil toujours visible *@
                            <li class="nav-item">
                                <a class="nav-link nav-link-inline" asp-controller="Home" asp-action="Index">
                                    <i class="bi bi-house-door me-1"></i>
                                    <span>Accueil</span>
                                </a>
                            </li>

                            @* Vendeur UNIQUEMENT *@
                            @if (User.IsInRole("Vendeur"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link nav-link-inline" asp-controller="Sales" asp-action="Index">
                                        <i class="bi bi-receipt-cutoff me-1"></i>
                                        <span>Commandes</span>
                                    </a>
                                </li>
                            }

                            @* Client UNIQUEMENT *@
                            @if (User.IsInRole("Client"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link nav-link-inline" asp-controller="Cart" asp-action="Index">
                                        <i class="bi bi-cart me-1"></i>
                                        <span>Panier</span>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link nav-link-inline" asp-controller="Orders" asp-action="Index">
                                        <i class="bi bi-bag-check me-1"></i>
                                        <span>Mes commandes</span>
                                    </a>
                                </li>
                            }

                            @* Liens visibles pour tout utilisateur authentifié (peu importe le rôle) *@
                            @if (User.Identity?.IsAuthenticated ?? false)
                            {
                                <li class="nav-item">
                                    <a asp-controller="Account" asp-action="Profile" class="nav-link nav-link-inline">
                                        <i class="bi bi-person-badge me-1"></i>
                                        <span>Profil</span>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <form method="post" asp-controller="Account" asp-action="Logout" class="d-inline">
                                        <button type="submit" class="btn btn-link nav-link nav-link-inline px-0">
                                            <i class="bi bi-box-arrow-right me-1"></i>
                                            <span>Déconnexion</span>
                                        </button>
                                    </form>
                                </li>
                            }
                            else
                            {
                                <li class="nav-item">
                                    <a asp-controller="Account" asp-action="Login" class="nav-link nav-link-inline">
                                        <i class="bi bi-box-arrow-in-right me-1"></i>
                                        <span>Connexion</span>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a asp-controller="Account" asp-action="Register" class="nav-link nav-link-inline">
                                        <i class="bi bi-person-plus me-1"></i>
                                        <span>Inscription</span>
                                    </a>
                                </li>
                            }
                        </ul>

                        <div class="navbar-social ms-lg-3 mt-3 mt-lg-0 d-flex align-items-center gap-2">
                            <a href="#" class="nav-social-icon">
                                <i class="bi bi-facebook"></i>
                            </a>
                            <a href="#" class="nav-social-icon">
                                <i class="bi bi-instagram"></i>
                            </a>
                            <a href="#" class="nav-social-icon">
                                <i class="bi bi-twitter-x"></i>
                            </a>
                        </div>
                    </div>
                </div>
            </nav>
        </div>
    </header>

    <main role="main">
        @* Retirer le Hero pour les pages Panier, Checkout et Commandes Resto *@
        @{
            var currentController = ViewContext.RouteData.Values["controller"]?.ToString();
            var currentAction = ViewContext.RouteData.Values["action"]?.ToString();
            var hideHero = currentController == "Cart"
            || currentController == "Checkout"
            || currentController == "Sales";
        }
        @if (!hideHero)
        {
            <section class="hero">
                <div class="container">
                    <h1>
                        <i class="bi bi-stars me-2"></i>
                        Le raffinement à portée de main
                    </h1>
                    <p>Restaurants élégants • Qualité premium • Préparation rapide</p>
                    <a class="btn btn-primary hero-button" asp-controller="Home" asp-action="Index">
                        <i class="bi bi-shop-window me-2"></i>
                        Voir les restaurants
                    </a>
                </div>
            </section>
        }

        <div class="container py-4">
            @RenderBody()
        </div>
    </main>

    <footer class="site-footer">
        <div class="container d-flex justify-content-center align-items-center">
            <p class="mb-0 text-center">
                <i class="bi bi-c-circle me-1"></i>
                @DateTime.Now.Year - ElegenceShop. Tous droits réservés.
            </p>
        </div>
    </footer>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>

