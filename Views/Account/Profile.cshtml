@model BoutiqueElegance.Models.User

@{
    ViewData["Title"] = "Profil";
    Layout = "_Layout";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-body">
                    <h2 class="card-title mb-4">Mon Profil</h2>

                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success">@TempData["SuccessMessage"]</div>
                    }

                    <form method="post" asp-action="UpdateProfile" asp-route-id="@Model.Id">
                        @Html.AntiForgeryToken()

                        <div class="mb-3">
                            <label for="fullName" class="form-label">Nom complet</label>
                            <input type="text" class="form-control" id="fullName" name="fullName" value="@Model.FullName" required />
                        </div>

                        <div class="mb-3">
                            <label for="email" class="form-label">Email</label>
                            <input type="email" class="form-control" id="email" name="email" value="@Model.Email" required />
                        </div>

                        <button type="submit" class="btn btn-primary">Mettre à jour</button>

                        <form method="post" asp-action="Logout" style="display: inline;">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-danger">Déconnexion</button>
                        </form>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
