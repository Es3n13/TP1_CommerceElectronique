@page
@model BoutiqueElegance.Pages.Account.ProfileModel
@{
    ViewData["Title"] = "Profil";
}

<h2>Mon profil</h2>

<form method="post">
    <div>
        <label>Nom complet</label>
        <input asp-for="CurrentUser.FullName" />
    </div>
    <div>
        <label>Courriel</label>
        <input asp-for="CurrentUser.Email" type="email" />
    </div>
    <div>
        <label>Rôle</label>
        <input value="@Model.CurrentUser.Role" disabled />
    </div>

    <button type="submit">Enregistrer</button>
</form>
