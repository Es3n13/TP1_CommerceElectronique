@page "{id:int}"
@model BoutiqueElegance.Pages.Restaurants.DetailsModel
@{
    ViewData["Title"] = Model.Restaurant?.Name ?? "Restaurant";
}

@if (Model.Restaurant == null)
{
    <div class="container">
        <div class="error-state">
            <div class="error-icon">
                <i class="bi bi-exclamation-circle"></i>
            </div>
            <h3>Restaurant introuvable</h3>
            <p>Le restaurant que vous recherchez n'existe pas.</p>
            <a href="@Url.Page("/Index")" class="btn btn-primary">
                <i class="bi bi-house-door me-2"></i>Retour à l'accueil
            </a>
        </div>
    </div>
}
else
{
    <!-- En-tête restaurant -->
    <section class="restaurant-hero">
        <img src="@Model.Restaurant.ImageUrl" alt="@Model.Restaurant.Name" class="hero-image" />
        <div class="hero-overlay"></div>
        <div class="hero-content">
            <div class="container">
                <h1 class="restaurant-title">@Model.Restaurant.Name</h1>
                <p class="restaurant-location">
                    <i class="bi bi-geo-alt-fill me-2"></i>@Model.Restaurant.Address
                </p>
                <div class="restaurant-tags">
                    <span class="cuisine-tag">
                        <i class="bi bi-cup-hot me-2"></i>@Model.GetCuisineDisplay()
                    </span>
                </div>
            </div>
        </div>
    </section>

    <!-- Description -->
    <section class="restaurant-description">
        <div class="container">
            <p class="description-text">@Model.Restaurant.Description</p>
        </div>
    </section>

    <!-- Menu -->
    <section class="menu-section">
        <div class="container">
            <h2 class="section-title">
                <i class="bi bi-card-list me-2"></i>Notre Menu
            </h2>

            @if (!Model.Restaurant.Plats.Any())
            {
                <div class="empty-menu">
                    <div class="empty-menu-icon">
                        <i class="bi bi-inbox"></i>
                    </div>
                    <p>Aucun plat n'est disponible pour le moment.</p>
                </div>
            }
            else
            {
                <div class="menu-grid">
                    @foreach (var plat in Model.Restaurant.Plats)
                    {
                        <div class="menu-item-card">
                            <!-- Contenu -->
                            <div class="item-content">
                                <h3 class="item-name">@plat.Name</h3>
                                @if (!string.IsNullOrEmpty(plat.Description))
                                {
                                    <p class="item-description">@plat.Description</p>
                                }

                                <!-- Prix -->
                                <p class="item-price">@plat.Price.ToString("0.00") $</p>

                                <!-- Sélecteur de quantité et bouton ajouter -->
                                <form method="get" action="@Url.Page("/Cart/Add")" class="item-action-form">
                                    <input type="hidden" name="platId" value="@plat.Id" />
                                    <input type="hidden" name="restaurantId" value="@Model.Restaurant.Id" />

                                    <div class="quantity-control">
                                        <button type="button" class="qty-btn qty-minus" onclick="decreaseQty(this)" title="Diminuer la quantité">
                                            <i class="bi bi-dash"></i>
                                        </button>
                                        <input type="number" name="quantity" value="1" min="1" max="99" class="qty-input"
                                               onchange="validateQuantity(this)"
                                               oninput="validateQuantity(this)" />
                                        <button type="button" class="qty-btn qty-plus" onclick="increaseQty(this)" title="Augmenter la quantité">
                                            <i class="bi bi-plus"></i>
                                        </button>
                                    </div>

                                    <button type="submit" class="btn-add-cart">
                                        <i class="bi bi-cart-plus me-2"></i>Ajouter
                                    </button>
                                </form>
                            </div>
                        </div>
                    }
                </div>
            }
        </div>
    </section>

    <script>
        function increaseQty(btn) {
            const form = btn.closest('.item-action-form');
            const input = form.querySelector('.qty-input');
            if (parseInt(input.value) < 99) {
                input.value = parseInt(input.value) + 1;
            }
        }

        function decreaseQty(btn) {
            const form = btn.closest('.item-action-form');
            const input = form.querySelector('.qty-input');
            if (parseInt(input.value) > 1) {
                input.value = parseInt(input.value) - 1;
            }
        }

        function validateQuantity(input) {
            let value = parseInt(input.value) || 1;
            if (value < 1) value = 1;
            if (value > 99) value = 99;
            input.value = value;
        }
    </script>
}



